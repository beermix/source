# Choose glibc version.

choice
	prompt "Glibc Version" if TOOLCHAINOPTS
	default GLIBC_USE_VERSION_2_31
	help
	  Select the version of glibc you wish to use.

	config GLIBC_USE_VERSION_2_28
		bool "glibc 2.28"

	config GLIBC_USE_VERSION_2_29
		bool "glibc 2.29"

	config GLIBC_USE_VERSION_2_31
		bool "glibc 2.31"

endchoice
